@* Views/Cv/_WorkItem.cshtml *@
@model CvGenerator.Models.WorkExperience

@* 
  Editor template for a single Work Experience entry.
  Expects ViewData.TemplateInfo.HtmlFieldPrefix to be set (e.g. "EntryWork" or "Experience[0]")
*@
<div class="work-item form-row mb-3">
  <div class="form-group col-md-4">
    <label asp-for="Company"></label>
    <input asp-for="Company" class="form-control bg-white text-dark" />
    <span asp-validation-for="Company" class="text-danger"></span>
  </div>
  <div class="form-group col-md-4">
    <label asp-for="Position"></label>
    <input asp-for="Position" class="form-control bg-white text-dark" />
    <span asp-validation-for="Position" class="text-danger"></span>
  </div>
  <div class="form-group col-md-2">
    <label asp-for="StartDate"></label>
    <input asp-for="StartDate" type="date" class="form-control" />
    <span asp-validation-for="StartDate" class="text-danger"></span>
  </div>
  <div class="form-group col-md-2">
    <label asp-for="EndDate"></label>
    <input asp-for="EndDate" type="date" class="form-control" />
    <span asp-validation-for="EndDate" class="text-danger"></span>
  </div>
  <div class="form-group col-md-12 form-check">
    <input asp-for="IsOngoing" class="form-check-input" />
    <label asp-for="IsOngoing" class="form-check-label"></label>
  </div>
  <div class="form-group col-md-12">
    <label asp-for="Responsibilities"></label>
    <textarea asp-for="Responsibilities" class="form-control bg-white text-dark"></textarea>
    <span asp-validation-for="Responsibilities" class="text-danger"></span>
  </div>
  <div class="form-group col-md-12 text-right">
    <button type="button" id="add-work" class="btn btn-sm btn-outline-primary work-btn">Add Experience</button>
  </div>
</div>

<style>
.work-item {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 1rem;
}
.work-btn {
  min-width: 110px;
  margin-right: 0;
  margin-left: 0;
  margin-top: 10px;
  font-size: 1rem;
  padding: 6px 16px;
  box-sizing: border-box;
}
</style>
