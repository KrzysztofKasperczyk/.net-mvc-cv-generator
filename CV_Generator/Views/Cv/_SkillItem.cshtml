@* Views/Cv/_SkillItem.cshtml *@
@model CvGenerator.Models.Skill

@* Single-skill editor row. HtmlFieldPrefix must already be set. *@
<div class="skill-item form-row mb-3">
  <div class="form-group col-md-5">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="form-group col-md-2">
    <label asp-for="Level"></label>
    <input asp-for="Level"
           type="number"
           min="1" max="100"
           class="form-control" />
    <span asp-validation-for="Level" class="text-danger"></span>
  </div>
  <div class="form-group col-md-5">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
  <div class="form-group col-md-12 d-flex justify-content-start align-items-center skill-actions">
    <button type="button" id="add-skill" class="btn btn-sm btn-outline-primary skill-btn">Add Skill</button>
</div>
</div>


<style>
.skill-item {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 18px 12px 8px 12px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(60,72,88,0.06);
  transition: box-shadow 0.2s;
}
.skill-item:focus-within {
  box-shadow: 0 4px 16px rgba(60,72,88,0.12);
  border-color: #90cdf4;
}
.skill-item label {
  font-weight: 500;
  color: #374151;
}
.skill-item .form-control, 
.skill-item textarea {
  background: #fff;
  border-radius: 4px;
  border: 1px solid #cbd5e1;
  transition: border-color 0.2s;
}
.skill-item .form-control:focus, 
.skill-item textarea:focus {
  border-color: #3182ce;
  box-shadow: 0 0 0 2px #bee3f8;
}
.skill-actions {
  gap: 10px;
}
.skill-btn {
  min-width: 110px;
  margin-right: 0;
  margin-left: 0;
  margin-top: 10px;
  font-size: 1rem;
  padding: 6px 16px;
  box-sizing: border-box;
}
</style>
