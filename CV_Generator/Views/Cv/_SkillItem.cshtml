@* Views/Cv/_SkillItem.cshtml *@
@model CvGenerator.Models.Skill

@* Single-skill editor row. HtmlFieldPrefix must already be set. *@
<div class="skill-item form-row mb-3">
  <div class="form-group col-md-5">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="form-group col-md-2">
    <label asp-for="Level"></label>
    <input asp-for="Level"
           type="number"
           min="1" max="100"
           class="form-control" />
    <span asp-validation-for="Level" class="text-danger"></span>
  </div>
  <div class="form-group col-md-5">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
<div class="form-group col-md-12 mt-3">
  <button type="button" id="add-skill" class="btn btn-sm btn-outline-primary">Add Skill</button>
</div>
</div>
